<%-include('./partials/header')%>
<%-include('./partials/navbar')%>



<div class="row" style="margin-top: 80px;">
    <div class="col-6 mx-auto">
        <form action="/login" method="POST">
            <h1 class="display-6">Login Form</h1>
             <div class="mb-3">
                <label for="mail" class="form-label">email: </label>
                <input type="email" class="form-control" name="email" id="mail" placeholder="email of the user" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="password of the user" required>
            </div>
            <button type="submit" class="btn btn-sm btn-success">login</button>
            <p class="mt-2">Dont have an account? <a href="/signup">Signup now</a></p>
        </form>
    </div>
</div>


<script src="/js/script.js"></script>
<%-include('./partials/footer')%>